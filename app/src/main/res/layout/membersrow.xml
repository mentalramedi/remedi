<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardElevation="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/memberDp"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profiledp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/allowed_member_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Member Username"
                android:textAlignment="center"
                android:textSize="30sp"
                android:background="@drawable/inputs"

                />

            <TextView
                android:id="@+id/allowed_member_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="fullname"
                android:background="@drawable/inputs"

                android:textAlignment="center"
                android:textSize="15sp" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/linehori"
        android:background="@color/indigo"/>
    <Button
        android:id="@+id/removeMemberbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:background="#ffffff"
        android:padding="14dp"
        android:layout_below="@id/linehori"
        android:text="Remove Member"
        android:textColor="@color/darkRed"
        android:textSize="15sp"
        tools:text="Remove Member"
        android:textAllCaps="false"/>
</RelativeLayout>

        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"/>
</androidx.cardview.widget.CardView>